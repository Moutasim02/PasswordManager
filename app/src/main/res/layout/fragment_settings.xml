<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">



       <Button
           android:id="@+id/PrivBtn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="60dp"
           android:layout_marginRight="50dp"
           android:text="Privacy and Policy"
           />

       <Button
       android:id="@+id/TermsBtn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="40dp"
       android:layout_marginRight="50dp"
           android:layout_below="@+id/PrivBtn"
       android:text="Terms and Conditions"
       />

       <Button
           android:id="@+id/DarkNlightBtn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="40dp"
           android:layout_marginRight="50dp"
           android:layout_below="@+id/TermsBtn"
           android:text="Dark/Light Mode"
           />

       <Button
           android:id="@+id/SignOutBtn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="40dp"
           android:layout_marginRight="50dp"
           android:layout_below="@+id/DarkNlightBtn"
           android:text="Sign Out"
           />





   </RelativeLayout>
</FrameLayout>